<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/doctor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mBtnStomach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="7dp"
        android:text="STOMACH PROBLEMS"
        app:layout_constraintEnd_toStartOf="@+id/mBtnUlcers"
        app:layout_constraintTop_toBottomOf="@+id/mBtnAsthma" />

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="WELCOME TO MY HEALTH APP"
        android:textColor="#021993"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/mTvText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvText"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:text="Hello user,"
        android:textColor="#EF4606"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/mTvcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mTvcontent"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="109dp"
        android:text="Welcome to my health app.The health app enables you to connect to websites that instruct you on ways to react during some minor and major health issues before taking the patient to a doctor."
        android:textColor="#203"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/mTvtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvtext"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="Here are some common health issues and their solutions/first-aid:"
        android:textColor="#EF0A5B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mBtnAsthma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        android:text="ASTHMA"
        app:layout_constraintEnd_toStartOf="@+id/mBtnAllergies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvtext" />

    <Button
        android:id="@+id/mBtnAllergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="19dp"
        android:text="ALLERGIES"
        app:layout_constraintBottom_toTopOf="@+id/mBtnStomach"
        app:layout_constraintEnd_toStartOf="@+id/mBtnUlcers"
        app:layout_constraintStart_toEndOf="@+id/mBtnAsthma" />

    <Button
        android:id="@+id/mBtnUlcers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="ULCERS"
        app:layout_constraintBaseline_toBaselineOf="@+id/mBtnAllergies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mBtnAllergies" />

    <Button
        android:id="@+id/mBtnConversions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="25dp"
        android:text="CONVERSIONS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnStomach" />

    <Button
        android:id="@+id/mBtnCrumps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="61dp"
        android:text="CRUMPS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnStomach" />
</androidx.constraintlayout.widget.ConstraintLayout>